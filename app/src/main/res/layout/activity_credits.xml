<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="project.equationinvasion.Credits"
    android:background="@drawable/background">

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/main"
        android:onClick="goBack"
        android:background="@drawable/gobackbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developers"
        android:id="@+id/creditsHeader"
        android:textColor="#ffffffff"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Agapeyev&#10;Jacob Frank&#10;Matt Goerwell&#10;Derek Larson&#10;Chun-Yip Tang "
        android:id="@+id/devList"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:layout_below="@+id/creditsHeader"
        android:layout_alignEnd="@+id/creditsHeader"
        android:layout_alignStart="@+id/creditsHeader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contributors"
        android:id="@+id/contributorHeader"
        android:textColor="#ffffffff"
        android:textSize="40sp"
        android:textIsSelectable="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/devList"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Craig Macdonald"
        android:id="@+id/contributors"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:layout_below="@+id/contributorHeader"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
