<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="project.equationinvasion.Play"
    android:background="#ff1b3d1c">

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/imageView"-->
        <!--android:src="@drawable/streakpipon"-->
        <!--android:layout_marginLeft="240dp"-->
        <!--android:layout_alignTop="@+id/imageView2"-->
        <!--android:layout_alignEnd="@+id/imageView2"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/initial_timer_time"
        android:id="@+id/time"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:layout_alignParentStart="false"
        android:layout_marginRight="50dp"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="300dp"
        android:src="@drawable/streakpipon"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_marginLeft="280dp"
        android:src="@drawable/streakpipon"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_marginLeft="260dp"
        android:src="@drawable/streakpipon"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_marginLeft="240dp"
        android:src="@drawable/streakpipon"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginLeft="220dp"
        android:src="@drawable/streakpipon"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_time"
        android:id="@+id/timeAdd"
        android:layout_below="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_equation"
        android:textSize="25dp"
        android:id="@+id/leftEquation"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/equals_sign"
        android:textSize="40dp"
        android:id="@+id/equals"
        android:layout_below="@+id/leftEquation"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/equation_answer"
        android:textSize="30dp"
        android:id="@+id/solution"
        android:layout_below="@+id/equals"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/trueBtn"
        android:background="@drawable/truebutton"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/equals"
        android:layout_alignTop="@+id/falseBtn" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/falseBtn"
        android:background="@drawable/falsebutton"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/equals"
        android:layout_below="@+id/feedback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:id="@+id/levelView"
        android:textColor="#ffffff"
        android:layout_alignEnd="@+id/scoreDisplay"
        android:layout_below="@+id/timeAdd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_changer_button"
        android:id="@+id/levelChange"
        android:layout_below="@+id/levelView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_score"
        android:id="@+id/scoreDisplay"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/feedback"
        android:layout_below="@+id/solution"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
</RelativeLayout>
