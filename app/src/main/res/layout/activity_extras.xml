<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="project.equationinvasion.Extras"
    android:background="@drawable/background">

    <!-- Extras Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extras"
        android:id="@+id/extrasTitle"
        android:textColor="#ffffff"
        android:textSize="65sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Instructions Button -->
    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/instructionsbutton"
        android:id="@+id/instructions"
        android:onClick="goToInstructions"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/highScore"
        android:layout_centerHorizontal="true" />

    <!-- High Score Button -->
    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/highscorebutton"
        android:id="@+id/highScore"
        android:onClick="goToHighScores"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/achievements"
        android:layout_alignStart="@+id/achievements" />

    <!-- Achievements Button -->
    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/achievementbutton"
        android:onClick="viewAchievements"
        android:id="@+id/achievements"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/credits"
        android:layout_centerHorizontal="true" />

    <!-- Credits Button -->
    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/creditsbutton"
        android:id="@+id/credits"
        android:onClick="goToCredits"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/goToMain"
        android:layout_alignStart="@+id/goToMain" />

    <!-- Go to Main Button -->
    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/gotomainbutton"
        android:id="@+id/goToMain"
        android:onClick="goToMain"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
